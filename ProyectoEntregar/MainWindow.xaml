<Window x:Class="ProyectoEntregar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoEntregar"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1200"
        Background="#FFE6EEF4"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Conectado" Margin="0,0,5,0"/>
            <TextBlock x:Name="usuarios" Text=""/>
        </StackPanel>
        <TabControl Grid.Row="1" x:Name="TControl" Background="#FFD6EAF8">
           
            <TabItem x:Name="tabItem" Header="+"  Height="32" VerticalAlignment="Top"  Background="#FFBBD5ED" GotFocus="TabItem_GotFocus"/>
        </TabControl>
    </Grid>
</Window>
